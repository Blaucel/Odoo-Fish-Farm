<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- list view for Pools-->

    <record model="ir.ui.view" id="ejro21222.farm_list">
      <field name="name">ejro21222.farm.tree</field>
      <field name="model">ejro21222.farm</field>
      <field name="arch" type="xml">
        <tree>
          <field name="selpool"/>
          <field name="selspecie"/>
          <field name="selfeeding"/>
          <field name="sellifecycle"/>
          <field name="seltransferdate"/>
          <field name="selfishingdate"/>
          <field name="oncharge"/>
        </tree>
      </field>
    </record>

    <!-- actions opening for Pools-->

    <record model="ir.actions.act_window" id="ejro21222.farm_action_window">
      <field name="name">Farming Processes</field>
      <field name="res_model">ejro21222.farm</field>
      <field name="view_mode">tree</field>
      <field name="context">{'search_default_available': 1}</field>
    </record>

</odoo>